---
layout: null
content_type: text/calendar
permalink: /events.ics
---
BEGIN:VCALENDAR{{ "\r\n" }}
VERSION:2.0{{ "\r\n" }}
PRODID:-//BitcoinDistrict.org//Bitcoin Events in the DMV//EN{{ "\r\n" }}
CALSCALE:GREGORIAN{{ "\r\n" }}
METHOD:PUBLISH{{ "\r\n" }}
{% for post in site.posts %}{% if post.draft != true %}{% if post.date >= site.time %}BEGIN:VEVENT{{ "\r\n" }}
UID:{{ post.uid | default: post.date | date_to_xmlschema }}-{{ post.title | slugify }}-bitcoindistrict.org{{ "\r\n" }}
DTSTAMP:{{ site.time | date_to_xmlschema }}{{ "\r\n" }}
DTSTART:{{ post.date | date_to_xmlschema }}{{ "\r\n" }}
{% if post.end_date %}DTEND:{{ post.end_date | date_to_xmlschema }}{{ "\r\n" }}{% endif %}
{%- if post.end_date -%}{%- else -%}{{ "\r\n" }}{%- endif -%}SUMMARY:{{ post.title }}{{ "\r\n" }}
{% if post.venue %}{% assign venue = site.data.venues | values | where: "slug", post.venue | first %}{% if venue %}LOCATION:{{ venue.address }}{{ "\r\n" }}{% endif %}{% endif %}
{% if post.description %}DESCRIPTION:{{ post.description | strip_newlines | strip }}{{ "\r\n" }}{% endif %}
END:VEVENT{{ "\r\n" }}
{% endif %}{% endif %}{% endfor %}END:VCALENDAR